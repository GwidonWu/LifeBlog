@using DAL.Entity.Entities
@model List<FileLibrary>

<!-- begin #page-title -->
<div id="page-title" class="page-title has-bg">
    <div class="bg-cover"><img src="~/src/Images/Img/cover11.jpg" alt="" /></div>
    <div class="container">
        <h1>LifeBlog</h1>
        <p>用相片记录生活点滴</p>
    </div>
</div>
<!-- end #page-title -->
<!-- begin #content -->
<div id="content" class="content">
    <div class="container">
        <h3>相片列表</h3><a href="@Html.Raw("/Web/Album/Index" + ".html")"><i>返回相册列表</i></a>
        <br /><br />
        <div id="gallery" class="gallery visible-xs">
        @{
            foreach (var item in Model)
            {
                <div class="image">
                    <div class="image-inner" data-animation="true" data-animation-type="flipInX">
                        <a href="http://www.wzdyyl.cn/src/Images/UploadFiles/@item.NewFileName" data-lightbox="roadtrip">
                            <img src="http://www.wzdyyl.cn/src/Images/Temp/@item.NewFileName" alt="" style="width:250px;height:250px;" />
                        </a>
                    </div>
                    <div class="image-info">
                        <h5 class="title">@item.Description</h5>
                    </div>
                </div>
            }
        }
    </div>
        <!-- begin post-list -->
        <div class="post-list post-grid post-grid-3 hidden-xs">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="post-li">
                        <!-- begin post-content -->
                        <div class="post-content">
                            <!-- begin post-info -->
                            <div class="post-info" style="padding:5px;">
                                <div class="post-by image flipInX contentAnimated finishAnimated" data-animation="true" data-animation-type="flipInX">
                                    <a href="http://www.wzdyyl.cn/src/Images/UploadFiles/@item.NewFileName" data-lightbox="roadtrip">
                                        <img src="http://www.wzdyyl.cn/src/Images/Temp/@item.NewFileName" alt="" style="width:250px;height:250px;" />
                                    </a>
                                </div>
                                <h5 class="post-title">
                                    @item.Description
                                </h5>
                            </div>
                            <!-- end post-info -->
                        </div>
                        <!-- end post-content -->
                    </div>
                </div>
            }
        </div>
        <!-- end post-list -->
        <div class="section-container">
            <!-- begin pagination -->
            <div class="pagination-container text-center">
                <div class="col-md-2">
                    当前页 @ViewBag.PageIndex
                    共 @ViewBag.PageCount 页
                </div>
                <div class="col-md-10">
                    <ul class="pagination m-t-0 m-b-0">
                        @Html.Raw(ViewBag.Page)
                    </ul>
                </div>
            </div>
            <!-- end pagination -->
        </div>
    </div>
</div>
<!-- end #content -->

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/src/Admin/assets/plugins/isotope/jquery.isotope.min.js"></script>
<script src="~/src/Admin/assets/plugins/lightbox/js/lightbox-2.6.min.js"></script>
<script src="~/src/Admin/assets/js/gallery.demo.min.js"></script>