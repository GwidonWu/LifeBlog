@using DAL.Entity.Entities
@model IEnumerable<Album>

<!-- begin #page-title -->
<div id="page-title" class="page-title has-bg">
    <div class="bg-cover"><img src="~/src/Images/Img/cover11.jpg" alt="" /></div>
    <div class="container">
        <h1>LifeBlog</h1>
        <p>用相片记录生活点滴</p>
    </div>
</div>
<!-- end #page-title -->
<!-- begin #content -->
<div id="content" class="content">
    <div class="container">
        <h3>相册列表</h3>
        <!-- begin post-list -->
        <div class="post-list post-grid post-grid-3">            
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="post-li">
                        <!-- begin post-content -->
                        <div class="post-content">
                            <!-- begin post-info -->
                            <div class="post-info" style="padding:5px;">
                                <div class="post-by">
                                    <a href="@Html.Raw("/Web/Album/AlbumDetail/" + item.ID +".html")">
                                        <img src="~/src/Images/Img/user.jpg" alt="@item.Name" style="width:250px;height:250px;" />
                                    </a>
                                </div>
                                <h5 class="post-title">
                                    @item.Name (@item.Count)
                                </h5>
                                <small>
                                    <i>@item.CreateTime.ToString("yyyy-MM-dd")</i>
                                </small>
                            </div>
                            <!-- end post-info -->
                        </div>
                        <!-- end post-content -->
                    </div>
                </div>
            }
        </div>
        <!-- end post-list -->
        @*<div class="section-container">
            <!-- begin pagination -->
            <div class="pagination-container text-center">
                <div class="col-md-2">
                    当前页 @ViewBag.PageIndex
                    共 @ViewBag.PageCount 页
                </div>
                <div class="col-md-10">
                    <ul class="pagination m-t-0 m-b-0">
                        @Html.Raw(ViewBag.Page)
                    </ul>
                </div>
            </div>
            <!-- end pagination -->
        </div>*@
    </div>
</div>
<!-- end #content -->

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
